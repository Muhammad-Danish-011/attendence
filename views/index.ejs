// Helper function to read file content
function readFileContent(file) {
    return new Promise((resolve, reject) => {
        const reader = new FileReader();
        reader.onload = (event) => resolve(event.target.result);
        reader.onerror = (error) => reject(error);
        reader.readAsText(file);
    });
}

// Transform Node.js data format to C# DTO format
function transformToCSharpFormat(nodeRecords) {
    return nodeRecords.map(record => ({
        UserSN: record.userSn || 0,
        DeviceUserID: record.deviceUserId?.toString() || '',
        UserName: record.name || 'Unknown',
        RecordTime: new Date(record.recordTime).toISOString(),
        DeviceIP: record.deviceIP || record.ip || '',
        Type: record.type || 'UNKNOWN'
    }));
}

